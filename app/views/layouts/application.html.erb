  </head>
  <div class="navbar">
  <div class=>
    <a href="/" class="item">
      <h1></h1>
    </a>
      <div class="right menu">
        <% if logged_in? %>
          <%= link_to 'Create a New User', new_user_path, {class: 'item'} %>
          <%= link_to 'Logout', logout_path, {class: 'item'} %>
        <% else %>
          <%= link_to 'Login', login_path, {class: 'item'} %>
          <%= link_to 'Create a New User', new_user_path, {class: 'item'} %>
        <% end %>
      </div>
    </div>
</div>
  <body>
    <div class="ui centered grid ">
      <div class="eight wide column">

        <%= yield %>

      </div>
    </div>
  </body>
